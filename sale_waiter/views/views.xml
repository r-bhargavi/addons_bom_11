<odoo>
  <data>
<record model="ir.ui.view" id="event_order_line">
             <field name="name">event.sale.order</field>
             <field name="model">sale.order</field>
             <field name="inherit_id" ref="sale.view_order_form" />
             <field name="arch" type="xml">

              <xpath expr="//notebook/page[last()]" position="after">
                <field name="id" invisible="1"/>
                   <page string="Waiters">
                         <field name="service_lines" context="{'default_order_id' : id}">
                          <tree string="Service" editable="bottom">
                                    <field name="employee_id" />
                                    <field name="confirmed" />
                                    <field name="phone" />
                                    <field name="email" />
                                    <field name="comment" />
                                </tree>
                         </field>
                   </page>
                   <page string="Check-List">
                         <field name="checklist_lines" context="{'default_order_id_cl' : id}">
                          <tree string="Checklist" editable="bottom">
                                    <field name="confirmed" />
                                    <field name="description" />
                                    <field name="who" />
                                    <field name="when" />
                                </tree>
                         </field>
                   </page>
              </xpath>

            </field>
</record>


